<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp">

    <TextView
        android:paddingStart="35dp"
        android:paddingEnd="0dp"
        android:id="@+id/nameUserChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/abcdz"
        android:text=""
        android:textSize="11sp"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/abcdz"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp" />

    <RelativeLayout
        android:id="@+id/abcdz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameUserChat"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.75">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/avatar_member"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/user" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/avatar_member"
            android:background="@drawable/bg_chat_left"
            android:padding="15dp"
            android:text="Loading..."
            android:textColor="#BEC1CA" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>