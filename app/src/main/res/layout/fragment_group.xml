<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_app">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/toolbar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_user"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/user"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:inputType="text"
            android:background="@drawable/bg_search_chat"
            android:layout_toStartOf="@id/add_more"
            android:layout_toEndOf="@id/avatar_user"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_regular"
            android:textSize="20sp"
            android:textColorHint="#CCCCCC"
            android:layout_centerVertical="true"
            tools:targetApi="o" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@id/text3"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/search_icon" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/more_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loadingListChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/bg_color_app"
        android:visibility="visible" />
</RelativeLayout>