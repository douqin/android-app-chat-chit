<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashView">
    <fragment
        android:id="@+id/splashView"
        android:name="com.douqin.chatchitVN.ui.splash.SplashView"
        android:label="SplashView">
        <action
            android:id="@+id/action_splashView_to_loginView"
            app:destination="@id/loginView" />
        <action
            android:id="@+id/action_splashView_to_screenStartChat"
            app:destination="@id/screenStartChat" />
    </fragment>
    <fragment
        android:id="@+id/loginView"
        android:name="com.douqin.chatchitVN.ui.login.LoginView"
        android:label="LoginView">
        <action
            android:id="@+id/action_screenLogin_to_screenStartChat"
            app:destination="@id/screenStartChat"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
    </fragment>
    <fragment
        android:id="@+id/screenMessage"
        android:name="com.douqin.chatchitVN.ui.message.MessageScreen"
        android:label="ScreenMessage">
        <action
            android:id="@+id/action_screenChat_to_screenInforUser"
            app:destination="@id/screenInforUser" />
        <argument
            android:name="idgroup"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/screenInforUser"
        android:name="com.douqin.chatchitVN.ui.infor.ScreenInforUser"
        android:label="ScreenInforUser" />
    <fragment
        android:id="@+id/screenStartChat"
        android:name="com.douqin.chatchitVN.ui.group.GroupScreen"
        android:label="ScreenStartChat">
        <argument
            android:name="isStartFromScrLogin"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_screenStartChat_to_screenChat"
            app:destination="@id/screenMessage"
            app:popUpTo="@+id/screenStartChat"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>