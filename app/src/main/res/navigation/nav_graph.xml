<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashView">
    <fragment
        android:id="@+id/splashView"
        android:name="com.douqin.chatchitVN.ui.splash.SplashView"
        android:label="SplashView">
        <action
            android:id="@+id/action_splashView_to_loginView"
            app:destination="@id/loginView"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashView_to_screenStartChat"
            app:destination="@id/groupMessage"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginView"
        android:name="com.douqin.chatchitVN.ui.login.LoginView"
        android:label="LoginView">
        <action
            android:id="@+id/action_screenLogin_to_screenStartChat"
            app:destination="@id/groupMessage"
            app:enterAnim="@anim/anim_fade_in"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/screenMessage"
        android:name="com.douqin.chatchitVN.ui.message.MessageScreen"
        android:label="ScreenMessage">
        <action
            android:id="@+id/action_screenChat_to_screenInforUser"
            app:destination="@id/screenInforUser"
            app:exitAnim="@android:anim/slide_out_right"
            app:popExitAnim="@android:anim/slide_out_right" />
        <argument
            android:name="idgroup"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/screenInforUser"
        android:name="com.douqin.chatchitVN.ui.infor.ScreenInforUser"
        android:label="ScreenInforUser" />
    <fragment
        android:id="@+id/groupMessage"
        android:name="com.douqin.chatchitVN.ui.group.GroupScreen"
        app:launchSingleTop="true"
        android:label="ScreenStartChat">
        <argument
            android:name="isStartFromScrLogin"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_screenStartChat_to_screenChat"
            app:destination="@id/screenMessage"
            app:enterAnim="@android:anim/slide_in_left"
            app:popUpTo="@+id/groupMessage"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_groupMessage_to_storyView"
            app:destination="@id/storyView"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:launchSingleTop="true"
            app:popUpTo="@+id/groupMessage" />
    </fragment>
    <fragment
        android:id="@+id/storyView"
        android:name="com.douqin.chatchitVN.ui.story.StoryScreen"
        android:label="StoryView" >
        <action
            android:id="@+id/action_storyView_to_storyDetailsView2"
            app:destination="@id/storyDetailsView" />
    </fragment>
    <fragment
        android:id="@+id/storyDetailsView"
        android:name="com.douqin.chatchitVN.ui.story.StoryDetailsView"
        android:label="StoryDetailsView" />

</navigation>